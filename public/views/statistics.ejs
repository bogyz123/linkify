<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stats for <%= shortUrl %>
    </title>
    <link rel="stylesheet" href="../styles/statistics.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
</head>

<body>
    <table>
        <thead>
            <tr>
                <th>Original URL</th>
                <th>Short URL</th>
                <th>Clicks</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <%= originalUrl %>
                </td>
                <td>
                    <%= shortUrl %>
                </td>
                <td>
                    <%= clicks %>
                </td>
                <td>
                    <%= createdAt %>
                </td>
            </tr>

        </tbody>
    </table>
    <canvas id="chart"></canvas>
</body>
<script>


    var ctx = document.getElementById('chart').getContext('2d');
    var clicksPerMonth = JSON.parse('<%- JSON.stringify(clicksPerMonth) %>');


    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
            datasets: [{
                label: '# of Clicks',
                data: Object.values(clicksPerMonth),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        }
    });

</script>
<style>
    #chart {
        width: 100%;
        height: 410px;
    }

    @media (max-width: 768px) {
        #chart {
            width: 90%;
            height: 300px;
        }
    }
</style>

</html>